{
  "compilerOptions": {
    "outDir": "dist",  
    "rootDir": "src",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": false,  // ðŸš€ Prevents JS files in src/
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
