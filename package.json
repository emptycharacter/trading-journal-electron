{
  "name": "trading-journal-electron",
  "version": "1.0.0",
  "type": "module",
  "description": "Trading Journal App with Electron, React, and SQLite",
  "main": "dist/main.js",  
  "scripts": {
    "dev": "tsc && webpack serve --mode development --config webpack.config.cjs",
    "start": "tsc && electron .",
    "build": "tsc && webpack --mode production --config webpack.config.cjs && electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "trading",
    "journal",
    "electron",
    "react"
  ],
  "author": "Your Name",
  "license": "ISC",
  "build": {
    "appId": "com.tradingjournal.electron",
    "productName": "Trading Journal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "chart.js": "^4.4.7",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.3",
    "@babel/preset-env": "^7.26.3",
    "@babel/preset-react": "^7.26.3",
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^19.0.10",
    "@types/react-chartjs-2": "^2.0.2",
    "@types/react-dom": "^19.0.4",
    "@types/react-router-dom": "^5.3.3",
    "7zip-bin": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.5.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
